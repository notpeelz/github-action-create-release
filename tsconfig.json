{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "lib": [
      "ES2020"
    ],
    "module": "Node16",
    "outDir": "./dist",
    "rootDir": "./src",
    "target": "ES2020",
    "strict": true,
    "useUnknownInCatchVariables": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "esModuleInterop": true
  }
}
